<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://dubbo.apache.org/schema/dubbo http://dubbo.apache.org/schema/dubbo/dubbo.xsd">

    <dubbo:application name="familyhelper-api-web-node">
        <dubbo:parameter key="qos.enable" value="false"/>
    </dubbo:application>

    <!-- zookeeper注册中心 -->
    <dubbo:registry address="${dubbo.registry.zookeeper.address}"/>

    <!-- dubbo协议 -->
    <dubbo:protocol name="dubbo" port="${dubbo.protocol.dubbo.port}" host="${dubbo.protocol.dubbo.host}"
                    dispatcher="message" threadpool="fixed" threads="100"/>

    <!-- 默认使用dubbo协议 -->
    <dubbo:provider protocol="dubbo"/>

    <!-- 向注册中心注册暴露服务地址,注册消费者服务 -->
    <!-- acckeeper -->
    <dubbo:reference id="acckeeperLoginService" interface="com.dwarfeng.acckeeper.stack.service.LoginService"
                     retries="0" timeout="60000"/>
    <dubbo:reference id="acckeeperPasswordService" interface="com.dwarfeng.acckeeper.stack.service.PasswordService"
                     retries="0" timeout="60000"/>
    <dubbo:reference id="acckeeperAccountService" interface="com.dwarfeng.acckeeper.stack.service.AccountService"
                     retries="0" timeout="60000"/>
    <dubbo:reference id="acckeeperAccountMaintainService"
                     interface="com.dwarfeng.acckeeper.stack.service.AccountMaintainService"
                     retries="0" timeout="60000"/>
    <!-- rbac -->
    <dubbo:reference id="rbacPermissionLookupService"
                     interface="com.dwarfeng.rbacds.stack.service.PermissionLookupService"
                     retries="3" timeout="60000"/>
    <dubbo:reference id="rbacUserMaintainService" interface="com.dwarfeng.rbacds.stack.service.UserMaintainService"
                     retries="3" timeout="60000"/>
    <dubbo:reference id="rbacRoleMaintainService"
                     interface="com.dwarfeng.rbacds.stack.service.RoleMaintainService"
                     retries="3" timeout="60000"/>
    <dubbo:reference id="rbacPermissionMaintainService"
                     interface="com.dwarfeng.rbacds.stack.service.PermissionMaintainService"
                     retries="3" timeout="60000"/>
    <dubbo:reference id="rbacPexpMaintainService"
                     interface="com.dwarfeng.rbacds.stack.service.PexpMaintainService"
                     retries="3" timeout="60000"/>
    <dubbo:reference id="rbacPermissionGroupMaintainService"
                     interface="com.dwarfeng.rbacds.stack.service.PermissionGroupMaintainService"
                     retries="3" timeout="60000"/>
    <!-- snowflake -->
    <dubbo:reference id="longIdService" interface="com.dwarfeng.sfds.stack.service.LongIdService"/>
</beans>
